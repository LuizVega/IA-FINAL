{
    "rewrites": [
        {
            "source": "/wp-admin:path*",
            "destination": "/404"
        },
        {
            "source": "/wp-content:path*",
            "destination": "/404"
        },
        {
            "source": "/wp-includes:path*",
            "destination": "/404"
        },
        {
            "source": "/(.*)\\.php",
            "destination": "/404"
        }
    ],
    "headers": [
        {
            "source": "/favicon.ico",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                },
                {
                    "key": "Content-Type",
                    "value": "image/x-icon"
                }
            ]
        },
        {
            "source": "/logo.svg",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "image/svg+xml"
                }
            ]
        }
    ]
}